<!-- Chat Bot Floating Button -->
<div class="chat-bot-container">
    <!-- Floating Button -->
    <button id="chatBotToggle" class="chat-bot-toggle">
        <i class="fas fa-comments"></i>
        <span class="chat-notification" id="chatNotification" style="display: none;">1</span>
    </button>

    <!-- Chat Modal -->
    <div id="chatBotModal" class="chat-bot-modal">
        <div class="chat-header">
            <div class="chat-header-info">
                <div class="bot-avatar">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="bot-info">
                    <h6 class="mb-0">Tư vấn viên AI</h6>
                    <small class="text-muted">Đang hoạt động</small>
                </div>
            </div>
            <button id="chatBotClose" class="chat-close-btn">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="chat-body" id="chatContainer">
            <div id="messages">
                <div class="message bot-message mb-3">
                    <div class="message-content bot-content">
                        <div class="bot-avatar-small">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="message-bubble bot-bubble">
                            Xin chào! Tôi là trợ lý AI tư vấn khóa học.
                            <br>Bạn cần hỗ trợ gì về các khóa học của chúng tôi không?
                        </div>
                    </div>
                </div>
            </div>
            <div id="typingIndicator" class="typing-indicator" style="display: none;">
                <div class="message-content bot-content">
                    <div class="bot-avatar-small">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="typing-dots">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="chat-footer">
            <div class="d-flex justify-content-between mb-2">
                <button id="clearHistoryBtn" class="btn btn-outline-danger btn-sm" type="button">
                    <i class="fas fa-trash"></i> Xóa lịch sử
                </button>
                <!-- Placeholder for Export History if needed in the future -->
            </div>
            <div class="chat-input-container">
                <input type="text" id="userInput" class="chat-input"
                       placeholder="Nhập câu hỏi về khóa học..." />
                <button id="sendBtn" class="chat-send-btn">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>
</div>


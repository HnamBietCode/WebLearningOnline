@{
    Layout = null;
    ViewData["Title"] = "Quên mật khẩu - E-Learning";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <!-- Animated Background -->
    <div class="animated-background"></div>

    <!-- Floating Educational Icons -->
    <div class="floating-icons">
        <i class="bi bi-book floating-icon"></i>
        <i class="bi bi-mortarboard floating-icon"></i>
        <i class="bi bi-laptop floating-icon"></i>
        <i class="bi bi-lightbulb floating-icon"></i>
        <i class="bi bi-journal-text floating-icon"></i>
        <i class="bi bi-award floating-icon"></i>
    </div>

    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="brand-icon">
                    <i class="bi bi-key"></i>
                </div>
                <h1 class="auth-title">Quên mật khẩu?</h1>
                <p class="auth-subtitle">Nhập email của bạn để nhận mã OTP xác nhận</p>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert-modern alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @ViewBag.Message
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert-modern alert-success">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["Success"]
                </div>
            }

            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="email" class="form-label">
                        <i class="bi bi-envelope"></i>
                        Email
                    </label>
                    <input type="email" name="email" id="email" class="form-control"
                           placeholder="Nhập email của bạn" required />
                </div>

                <button type="submit" class="btn-modern btn-primary-modern">
                    <i class="bi bi-send"></i>
                    Gửi mã OTP
                </button>

                <div class="back-to-login">
                    <a href="@Url.Action("Login", "Account")" class="text-link">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại đăng nhập
                    </a>
                </div>
            </form>
        </div>
    </div>

    <link href="@Url.Content("~/css/Account/ForgotPassword.css")" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/Account/ForgotPassword.js")"></script>
</body>
</html>
